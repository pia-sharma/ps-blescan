<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PSBLE" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/appWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/appBlack</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <style name="Theme.AppSplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/appBlack</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
        <item name="postSplashScreenTheme">@style/Theme.PSBLE</item>
    </style>
</resources>