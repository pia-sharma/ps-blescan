<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Primary button-->
    <style name="PSBLE.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_height">@dimen/buttons_height_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="shapeAppearance">@style/AppShapeAppearance.SmallComponent</item>
        <item name="android:textAppearance">@style/buttonTextStyle</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="fontFamily">@font/montserratsemibold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="PSBLE.Button.Primary.Small" parent="PSBLE.Button.Primary">
        <item name="android:layout_height">@dimen/buttons_height_primary_small</item>
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="PSBLE.Button.Secondary" parent="PSBLE.Button.Primary">
        <item name="android:backgroundTint">@color/colorSecondary</item>
        <item name="android:textColor">@color/appBlack</item>
    </style>

    <!--Button Shapes-->
    <style name="AppShapeAppearance.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/_12sdp</item>
    </style>


    <!--CardView-->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:outlineProvider">background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/padding_medium</item>
        <item name="android:layout_marginEnd">@dimen/padding_medium</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:layout_marginBottom">@dimen/_3sdp</item>
        <item name="cardCornerRadius">@dimen/_6sdp</item>
        <item name="cardElevation">@dimen/_3sdp</item>
        <item name="cardBackgroundColor">@color/cardBackgroundColor</item>
    </style>


</resources>